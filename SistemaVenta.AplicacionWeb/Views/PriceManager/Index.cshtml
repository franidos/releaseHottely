                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Precio Regular</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Temporadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Festivos</a>
                </li>
            </ul>
            <div class="row tab-content" id="myTabContent">
                <div class="tab-pane fade show active col-sm-12" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-sm-3">
                            <button id="btnNuevo" class="btn btn-warning"><i class="fas fa-plus-circle"></i> Nuevo precio Regular</button>
                        </div>
                    </div>
                    <hr />
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
