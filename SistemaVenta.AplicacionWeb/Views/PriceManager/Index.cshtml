                                <th>Sabado</th>
                                <th>Domingo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade col-sm-12" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-sm-3">
                            <button id="btnNuevo2" class="btn btn-warning"><i class="fas fa-plus-circle"></i> Nueva Temporada</button>
                        </div>
                    </div>
                    <hr />
                    <table class="table table-bordered" id="tbdata2" cellspacing="0" style="width:100%">
                        <thead>
