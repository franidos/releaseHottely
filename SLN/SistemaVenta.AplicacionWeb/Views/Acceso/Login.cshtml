@model SistemaVenta.AplicacionWeb.Models.DTOs.UsuarioLoginDTO;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ES">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hottely - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">

</head>

			<body >

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                 <div class="px-5 ms-xl-4 d-flex justify-content-center align-items-center" style="padding-bottom: 48px; padding-top: 48px;">
                    <img src="/img/hottely1.png" style="width: auto; max-width: 100%; max-height: 180px" />
                </div>

                <div class="d-flex justify-content-center align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-controller="Acceso" asp-action="Login" method="post">


                        <div class="text-center">
                            <h1 class="h2 text-gray-900 mb-4">Bienvenido</h1>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="email" class="form-control form-control-user" placeholder="Correo" asp-for="Correo">
                            <label class="form-label" for="form2Example18">Email address</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" class="form-control form-control-user" placeholder="Contraseña" asp-for="Clave">
                            <label class="form-label" for="form2Example28">Password</label>
                        </div>

                        <div class="form-outline mb-4">
                            <div class="custom-control custom-checkbox small">
                                <input type="checkbox" class="custom-control-input" id="chkMantenerSesion" asp-for="MantenerSesion">
                                <label class="custom-control-label" for="chkMantenerSesion">Mantener Sesión</label>
                            </div>
                        </div>
                            @if (ViewData["Mensaje"] != null)
                                        {
                                            <div class="form-group">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                </div>
                                            </div>
                                        }

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-info btn-user btn-block">
                                Ingresar
                            </button>
                        </div>
                        <a class="small text-warning" href="@Url.Action("RestablecerContraseña","Acceso")">¿Olvidó su contraseña?</a>
                        <p>No tienes cuenta? <a href="#!" class="link-info">Registrarse aqui</a></p>

                       </form>
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/img/login-bg.jpg" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>


</body>

</html>