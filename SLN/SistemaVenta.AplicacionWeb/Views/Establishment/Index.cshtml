@{
    ViewData["Title"] = "Establecimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    @*<link href="~/vendor/drag-drop-image-uploader/dist/image-uploader.min.css" rel="stylesheet">*@
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-gradient-info">
            <h6 class="m-0 font-weight-bold text-white">Datos del Establecimiento</h6>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-sm-12">
                    <form id="formEstablishmet">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtNumeroDocumento">Numero Documento</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtNumeroDocumento" name="Numero Documento">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtRazonSocial">Razon Social</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtRazonSocial" name="Razon Social">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtCorreo">Correo</label>
                                        <input type="email" class="form-control form-control-sm input-validar" id="txtCorreo" name="Correo">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtDireccion">Direccion</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtDireccion" name="Direccion">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtCorreo">RNT</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtRnt" name="Rnt">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtDireccion">Token</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtToken" name="Token">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txTelefono">Telefono</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txTelefono" name="Telefono">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtImpuesto">% Impuesto</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtImpuesto" name="Impuesto">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtSimboloMoneda">Simbolo Moneda</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtSimboloMoneda" name="Simbolo Moneda">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtContact">Contacto</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtContact" name="Contact">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtCheckInTime">Horario CheckIn</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtCheckInTime" name="CheckInTime">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtCheckOutTime">Horario CheckOut</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtCheckOutTime" name="CheckOutTime">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtEstablishmentType">Tipo de Establecimiento</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtEstablishmentType" name="EstablishmentType">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtLogo">Logo</label>
                                        <input class="form-control-file" type="file" id="txtLogo" />
                                    </div>
                                </div>

                            </div>
                            <div class="col-sm-4">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <img id="imgLogo" style="max-width:200px;" src="" class="rounded" alt="Logo">
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button class="btn btn-warning btn-sm" type="button" id="btnGuardarCambios">Guardar Cambios</button>
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12" style="border: 1px solid #ccc">
                                <label class="active">Fotos del Establecimiento</label>
                                <ul id="input-images" class="sortable-list">
                                </ul>
                                <div class="add-image">
                                    @*                                        <label for="file-input">
                                <i class="fas fa-upload"></i> Agregar imagen
                                </label>*@
                                    <input type="file" id="file-input" name="imagenes" multiple>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="~/js/vistas/Establishment_Index.js"></script>
    <script src="~/js/utilities/imgUtils.js"></script>
    }
